<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hclm.mybatis.mapper.FileMapper">
    <select id="getUsedStorage">
        SELECT COALESCE(SUM(file_size), 0) FROM files WHERE merchant_id = #{merchantId}
    </select>
</mapper>