<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hclm.web.mapper.CatItemsMapper">
    <delete id="removeByCatId">
        DELETE FROM menu_category_items
        WHERE category_id = #{categoryId}
        <if test="itemIds != null and itemIds.size() > 0">
            AND item_id IN
            <foreach item="itemId" collection="itemIds" separator="," open="(" close=")">
                #{itemId}
            </foreach>
        </if>
    </delete>
    <select id="coutByCatId" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM menu_category_items
        WHERE category_id = #{categoryId}
        <if test="itemIds != null and itemIds.size() > 0">
            AND item_id IN
            <foreach item="itemId" collection="itemIds" separator="," open="(" close=")">
                #{itemId}
            </foreach>
        </if>
    </select>
</mapper>